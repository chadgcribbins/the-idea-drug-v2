---
import Layout from "../layouts/Layout.astro";
import { SITE } from "../lib/site";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "the-idea-drug");
const d = page.data as Record<string, any>;
---

<Layout title={d.title} description={d.description}>
  <!-- Panel 1: Book hero — two-column: book stack left, text right -->
  <section class="section section--lg">
    <div class="container">
      <div class="hero-grid">
        <div class="hero-image">
          <div class="book-stack">
            <img
              src="/images/routine.png"
              alt="The Weekly Routine — sample page"
              class="book-stack__bg book-stack__bg--left"
              loading="eager"
            />
            <img
              src="/images/cover.png"
              alt="The Idea Drug book cover"
              class="book-stack__cover"
              loading="eager"
            />
            <img
              src="/images/why.png"
              alt="Wrapping up Why — sample page"
              class="book-stack__bg book-stack__bg--right"
              loading="eager"
            />
          </div>
        </div>
        <div class="hero-copy">
          <h1>{SITE.book.title}</h1>
          <p class="hero-description">{d.bookDescription}</p>
          <p class="hero-date"><strong>Out {SITE.book.launchDate}</strong></p>
          <p class="hero-preorder"><strong>Published by {SITE.book.publisher}</strong></p>
          <div class="hero-cta">
            <a href="/contact" class="btn">Get in TOUCH</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Panel 2: Sneak peek — grey, centred, video embed -->
  <section class="section section--lg section--grey">
    <div class="container peek-panel">
      <div class="video-embed">
        <iframe
          src={`https://www.youtube.com/embed/${d.videoId}`}
          title={d.videoTitle}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          loading="lazy"
        ></iframe>
      </div>
      <h2>Want a sneak peek?</h2>
      <p class="peek-description">{d.videoDescription}</p>
      <p class="peek-meta"><strong>Out {SITE.book.launchDate}</strong></p>
      <p class="peek-meta"><strong>Published by {SITE.book.publisher}</strong></p>
      <a href="/contact?subject=speaking" class="btn">Book me to SPEAK</a>
    </div>
  </section>

  <!-- Panel 3: Everything you know is wrong — text left, cover right -->
  <section class="section section--lg">
    <div class="container">
      <div class="wrong-grid">
        <div class="wrong-copy">
          <h2>Everything you know is wrong</h2>
          <p class="wrong-intro">{d.wrongIntro}</p>
          <ul class="wrong-bullets">
            {d.bullets?.map((bullet: string) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>
        <div class="wrong-image">
          <img
            src="/images/cover.png"
            alt="The Idea Drug book cover"
            class="cover--md"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* -------------------------------------------------------
     Panel 1 — Book hero (two-column: stack left, text right)
     ------------------------------------------------------- */
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--sys-xl, 3.5rem);
    align-items: center;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .book-stack {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 380px;
    height: 340px;
  }

  .book-stack__cover {
    position: relative;
    z-index: 2;
    height: 280px;
    width: auto;
    display: block;
  }

  .book-stack__bg {
    position: absolute;
    z-index: 1;
    height: 230px;
    width: auto;
    top: 50%;
    transform: translateY(-50%);
  }

  .book-stack__bg--left {
    left: -10px;
  }

  .book-stack__bg--right {
    right: -10px;
  }

  .hero-copy h1 {
    margin-bottom: var(--sys-medium, 1.5rem);
  }

  .hero-description {
    margin-bottom: var(--sys-large, 2.25rem);
    line-height: var(--sys-line-height-loose, 1.8);
  }

  .hero-date {
    margin-bottom: var(--sys-xxs, 0.44rem);
  }

  .hero-preorder {
    margin-bottom: var(--sys-medium, 1.5rem);
  }

  .hero-cta {
    display: flex;
  }

  /* -------------------------------------------------------
     Panel 2 — Sneak peek (grey, centred, video)
     ------------------------------------------------------- */
  .peek-panel {
    text-align: center;
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
  }

  .video-embed {
    position: relative;
    width: 100%;
    max-width: 560px;
    aspect-ratio: 16 / 9;
    margin: 0 auto var(--sys-large, 2.25rem);
    background: var(--sys-color-on-surface, #222);
    box-shadow: var(--sys-surface-shadows-md, 0 6px 20px rgba(0,0,0,0.18));
  }

  .video-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .peek-panel h2 {
    margin-bottom: var(--sys-small, 1rem);
  }

  .peek-description {
    margin-bottom: var(--sys-large, 2.25rem);
    line-height: var(--sys-line-height-loose, 1.8);
  }

  .peek-meta {
    margin-bottom: var(--sys-xxs, 0.44rem);
  }

  .peek-panel .btn {
    margin-top: var(--sys-medium, 1.5rem);
  }

  /* -------------------------------------------------------
     Panel 3 — Everything you know is wrong (two-column)
     ------------------------------------------------------- */
  .wrong-grid {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--sys-xl, 3.5rem);
    align-items: start;
  }

  .wrong-copy h2 {
    margin-bottom: var(--sys-medium, 1.5rem);
  }

  .wrong-intro {
    margin-bottom: var(--sys-medium, 1.5rem);
    line-height: var(--sys-line-height-loose, 1.8);
  }

  .wrong-bullets {
    padding-left: var(--sys-medium, 1.5rem);
    display: flex;
    flex-direction: column;
    gap: var(--sys-small, 1rem);
    list-style-type: none;
  }

  .wrong-bullets li {
    position: relative;
    line-height: var(--sys-line-height-loose, 1.8);
  }

  .wrong-bullets li::before {
    content: "•";
    position: absolute;
    left: -1.5rem;
    color: var(--sys-color-primary, #D42020);
  }

  .wrong-image img {
    width: auto;
  }

  /* -------------------------------------------------------
     Responsive
     ------------------------------------------------------- */
  @media (max-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--sys-medium, 1.5rem);
    }

    .hero-cta {
      justify-content: center;
    }

    .book-stack {
      height: 240px;
      max-width: 260px;
      margin: 0 auto;
    }

    .book-stack__cover {
      height: 210px;
    }

    .book-stack__bg {
      height: 180px;
      left: auto;
      right: auto;
    }

    .book-stack__bg--left {
      left: -20px;
    }

    .book-stack__bg--right {
      right: -20px;
    }

    .peek-panel {
      max-width: 100%;
    }

    .video-embed {
      max-width: 100%;
    }

    .wrong-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--sys-large, 2.25rem);
    }

    .wrong-image {
      display: flex;
      justify-content: center;
    }

    .wrong-image img {
      max-height: 250px;
    }

    .wrong-bullets {
      text-align: left;
    }
  }
</style>
