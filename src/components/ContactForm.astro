---
interface Props {
  prefill?: string;
}

const { prefill = "" } = Astro.props;
---

<form class="contact-form" method="POST" data-contact-form>
  <div class="form-row">
    <label for="contact-name">Your name</label>
    <input type="text" id="contact-name" name="name" placeholder="Name" required />
  </div>
  <div class="form-row">
    <label for="contact-email">Your email</label>
    <input type="email" id="contact-email" name="email" placeholder="Email" required autocomplete="email" />
  </div>
  <div class="form-row">
    <label for="contact-message">Your Message</label>
    <textarea id="contact-message" name="message" placeholder="Your message" rows="6" required>{prefill}</textarea>
  </div>
  <div class="form-row form-row--submit">
    <button type="submit" class="btn btn--submit">SUBMIT</button>
  </div>
</form>

<style>
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--sys-medium, 1.5rem);
    width: 100%;
    max-width: 800px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--sys-small, 1rem);
    align-items: start;
  }

  .form-row label {
    font-family: var(--sys-font-family-display, 'Quattrocento Sans', sans-serif);
    font-size: var(--sys-sizes-small, 13px);
    font-weight: 700;
    color: var(--sys-color-on-surface, #222);
    padding-top: var(--sys-xs, 0.67rem);
    text-align: right;
  }

  .form-row input,
  .form-row textarea {
    padding: var(--sys-xs, 0.67rem) var(--sys-small, 1rem);
    border: var(--comp-form-border-width, 1px) solid var(--comp-form-border, #D9D6D0);
    background: var(--comp-form-bg, #fff);
    font-size: var(--sys-sizes-base, 17px);
    color: var(--sys-color-on-surface, #222);
    outline: none;
    transition: border-color var(--sys-motion-duration, 200ms) ease;
  }

  .form-row input:focus,
  .form-row textarea:focus {
    border-color: var(--comp-form-focus-ring-color, #D42020);
    box-shadow: 0 0 0 var(--comp-form-focus-ring-width, 2px) var(--comp-form-focus-ring-color, #D42020);
  }

  .form-row textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-row--submit {
    grid-template-columns: 140px 1fr;
  }

  .form-row--submit button {
    grid-column: 2;
  }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
      gap: var(--sys-xxs, 0.44rem);
    }

    .form-row label {
      padding-top: 0;
      text-align: left;
    }

    .form-row--submit {
      grid-template-columns: 1fr;
    }

    .form-row--submit button {
      grid-column: 1;
    }
  }
</style>
